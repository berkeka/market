<Window x:Class="Market.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Market"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Rectangle Fill="#F0F0F0" HorizontalAlignment="Left" Height="380" Margin="20,20,0,0"  VerticalAlignment="Top" Width="360"/>
        <Rectangle Fill="#F0F0F0" HorizontalAlignment="Right" Height="380" Margin="0,20,20,0" VerticalAlignment="Top" Width="360"/>
        <Button Content="Satıcı Arayüzü" Click="SatisButtonClicked" FontSize="20" HorizontalAlignment="Left" Margin="130,200,0,0" Height="60" Width="140"/>
        <Button Content="Rapor Arayüzü" Click="RaporButtonClicked" FontSize="20" HorizontalAlignment="Right" Margin="0,200,130,0" Height="60" Width="140"/>
        <Image Source="/Assets/Images/salesman.png" HorizontalAlignment="Left"  Margin="150,130,0,180" Height="100" Width="100"/>
        <Image Source="/Assets/Images/report.png" HorizontalAlignment="Right" Margin="0,130,150,180" Height="100" Width="100"/>

    </Grid>
</Window>
