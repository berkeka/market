<Window x:Class="Market.CustomerSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Market"
        mc:Ignorable="d"
        Title="CustomerSelectionWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Müşteriler" HorizontalAlignment="Left" Margin="51,49,0,0" VerticalAlignment="Top"/>
        <ListView x:Name="CustomerList" HorizontalAlignment="Left" Height="330" Margin="51,75,0,0" VerticalAlignment="Top" Width="500">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="İsim" DisplayMemberBinding="{Binding Name}" Width="200"/>
                    <GridViewColumn Header="Soyisim" DisplayMemberBinding="{Binding LastName}" Width="200"/>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Seç" Click="SecButtonClicked" HorizontalAlignment="Left" Margin="644,217,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
